<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="android.encryption.MainActivity"
    android:animateLayoutChanges="true"
    android:background="#303030">
<GridLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:text="ENCRYPTION "
        android:id="@+id/textView"
        android:textSize="35dp"
        android:transitionName="@string/abc_font_family_body_1_material"
        android:textAlignment="center"
        android:textColor="#FF8756F9"
        android:animateLayoutChanges="true"
        style="?android:attr/borderlessButtonStyle"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_row="0"
        android:layout_column="0" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:text="Caesar Cipher"
        android:id="@+id/button"
        android:onClick="onButtonClick1"
        android:layout_below="@+id/textView"
        android:animateLayoutChanges="true"
        android:background="#303030"
        style="?android:attr/borderlessButtonStyle"
        android:textColor="#FF8756F9"
        android:textSize="20dp"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_row="3"
        android:layout_column="0" />

    <Button
        android:layout_width="387dp"
        android:layout_height="66dp"
        android:text="Vigenere Cipher"
        android:id="@+id/button2"
        android:layout_below="@+id/button"
        android:layout_alignStart="@+id/button"
        android:layout_marginTop="38dp"
        android:onClick="onButtonClick2"
        android:animateLayoutChanges="true"
        android:background="#303030"
        android:shadowColor="#FF8756F9"
        style="?android:attr/borderlessButtonStyle"
        android:textColor="#FF8756F9"
        android:layout_alignEnd="@+id/button"
        android:textSize="20dp"
        android:layout_row="4"
        android:layout_column="0" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:text="DES ENCRYPTION"
        android:id="@+id/button3"
        android:layout_below="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:layout_marginTop="45dp"
        android:onClick="onButtonClick3"
        android:animateLayoutChanges="true"
        android:background="#303030"
        style="?android:attr/borderlessButtonStyle"
        android:textColor="#FF8756F9"
        android:layout_alignEnd="@+id/button2"
        android:textSize="20dp"
        android:layout_row="5"
        android:layout_column="0" />

    <Button
        android:layout_width="391dp"
        android:layout_height="70dp"
        android:text="AES ENCRYPTION"
        android:id="@+id/button4"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:onClick="onButtonClick4"
        android:animateLayoutChanges="true"
        android:background="#303030"
        style="?android:attr/borderlessButtonStyle"
        android:textColor="#FF8756F9"
        android:layout_alignEnd="@+id/button3"
        android:textSize="20dp"
        android:layout_row="6"
        android:layout_column="0" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TEST ALL"
        android:id="@+id/button5"
        android:layout_marginTop="49dp"
        android:onClick="onButtonClick15"
        android:layout_below="@+id/button4"
        android:animateLayoutChanges="true"
        android:background="#303030"
        style="?android:attr/borderlessButtonStyle"
        android:textColor="#FF8756F9"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textSize="20dp"
        android:layout_row="7"
        android:layout_column="0" />
</GridLayout>
</RelativeLayout>
