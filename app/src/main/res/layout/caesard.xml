<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="#303030">

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText11"
            android:layout_marginTop="49dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textColor="#FF8756F9"
            android:textColorHint="#FF8756F9"
            android:hint="Enter message here"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Decrypt"
            android:id="@+id/button24"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:onClick="onButtonClick20"
            android:textColor="#FF8756F9"
            android:background="#303030" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:id="@+id/textView23"
            android:layout_below="@+id/button24"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="104dp"
            android:textSize="15dp"
            android:textColor="#FF8756F9"
            android:textColorHint="#FF8756F9"
            android:hint="Decrypted Text"/>

        <TextView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="KEY"
            android:id="@+id/textView24"
            android:textSize="35dp"
            android:layout_above="@+id/button24"
            android:layout_toStartOf="@+id/button24"
            android:layout_marginBottom="68dp"
            android:textColor="#FF8756F9" />

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText13"
            android:layout_alignBottom="@+id/textView24"
            android:layout_toEndOf="@+id/button24"
            android:textColorHint="#FF8756F9"
            android:textColor="#FF8756F9"
            android:hint="Enter key here"/>
    </RelativeLayout>
</LinearLayout>