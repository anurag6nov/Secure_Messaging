<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:onClick="onButtonClick7"
        android:background="#303030">

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:id="@+id/editText5"
            android:textColor="#FF8756F9"
            android:textColorHint="#FF8756F9"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:hint="Enter message here"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Encrypt"
            android:id="@+id/button8"
            android:onClick="onButtonClick7"
            android:layout_above="@+id/textView6"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="68dp"
            android:background="#303030"
            android:textColor="#FF8756F9" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:id="@+id/textView6"
            android:layout_marginBottom="49dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:textColor="#FF8756F9"
            android:textColorHint="#FF8756F9"
            android:hint="Encrypted Text"/>

        <EditText
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:id="@+id/editText10"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="#FF8756F9"
            android:textColorHint="#FF8756F9"
            android:hint="Enter key here"/>

        <TextView
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:text="Auto Key"
            android:id="@+id/textView10"
            android:textSize="30dp"
            android:layout_marginBottom="49dp"
            android:layout_above="@+id/editText10"
            android:layout_alignEnd="@+id/button8"
            android:textColor="#FF8756F9" />

        <CheckBox
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:id="@+id/checkBox4"
            android:checked="false"
            android:layout_alignTop="@+id/textView10"
            android:layout_toEndOf="@+id/button8"
            android:background="#303030"
            android:textColor="#FF8756F9" />

        <Button
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:text="Share"
            android:id="@+id/button11"
            android:layout_alignTop="@+id/editText10"
            android:layout_toEndOf="@+id/checkBox4"
            android:background="#303030"
            android:textColor="#FF8756F9" />

        <Button
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:text="Share"
            android:id="@+id/button12"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="#303030"
            android:textColor="#FF8756F9" />

    </RelativeLayout>
</LinearLayout>