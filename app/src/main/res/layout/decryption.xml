<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#303030">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="Decryption"
        android:id="@+id/textView22"
        android:layout_gravity="center_horizontal"
        android:textSize="40dp"
        android:textAlignment="center"
        android:background="#303030"
        android:textColor="#FF8756F9" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="#303030">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Caesar"
            android:id="@+id/button20"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="52dp"
            android:onClick="onButtonClick21"
            android:layout_row="6"
            android:layout_column="0"
            android:textColor="#FF8756F9"
            android:background="#303030"
            android:textSize="25dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AES"
            android:id="@+id/button23"
            android:layout_marginTop="68dp"
            android:layout_below="@+id/button22"
            android:layout_alignStart="@+id/button22"
            android:onClick="onButtonClick24"
            android:layout_row="7"
            android:layout_column="0"
            android:textColor="#FF8756F9"
            android:background="#303030"
            android:textSize="25dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DES"
            android:id="@+id/button22"
            android:layout_below="@+id/button21"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp"
            android:onClick="onButtonClick31"
            android:layout_row="8"
            android:layout_column="0"
            android:textColor="#FF8756F9"
            android:background="#303030"
            android:textSize="25dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vigenere"
            android:id="@+id/button21"
            android:layout_marginTop="74dp"
            android:layout_below="@+id/button20"
            android:layout_alignEnd="@+id/button20"
            android:onClick="onButtonClick27"
            android:layout_row="9"
            android:layout_column="0"
            android:textColor="#FF8756F9"
            android:background="#303030"
            android:textSize="25dp" />

    </GridLayout>
</LinearLayout>