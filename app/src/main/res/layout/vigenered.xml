<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="#303030">

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText15"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="57dp"
            android:textColor="#FF8756F9"
            android:textColorHint="#FF8756F9"
            android:hint="Enter message here"/>

        <TextView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="Key"
            android:id="@+id/textView28"
            android:layout_below="@+id/editText15"
            android:layout_alignParentStart="true"
            android:layout_marginStart="60dp"
            android:layout_marginTop="82dp"
            android:textSize="30dp"
            android:textColor="#FF8756F9" />

        <EditText
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText16"
            android:layout_alignTop="@+id/textView28"
            android:layout_alignParentEnd="true"
            android:textColor="#FF8756F9"
            android:textColorHint="#FF8756F9"
            android:hint="Enter key here"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Decrypt"
            android:id="@+id/button26"
            android:layout_below="@+id/editText16"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="98dp"
            android:onClick="onButtonClick26"
            android:background="#303030"
            android:textColor="#FF8756F9" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:id="@+id/textView29"
            android:layout_below="@+id/button26"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="88dp"
            android:textColorHint="#FF8756F9"
            android:textColor="#FF8756F9"
            android:hint="Encrypted text"/>
    </RelativeLayout>
</LinearLayout>