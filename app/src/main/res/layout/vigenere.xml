<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:background="#303030">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/editText3"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="108dp"
            android:textColor="#FF8756F9"
            android:textColorHint="#FF8756F9"
            android:hint="Enter message here"/>

        <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:text="Auto Key"
            android:id="@+id/textView3"
            android:textSize="25dp"
            android:layout_alignTop="@+id/checkBox2"
            android:layout_alignEnd="@+id/button7"
            android:textColor="#FF8756F9" />

        <CheckBox
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:text="Auto"
            android:id="@+id/checkBox2"
            android:layout_marginEnd="49dp"
            android:checked="false"
            android:layout_above="@+id/editText4"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="31dp"
            android:textColor="#FF8756F9"
            android:background="#303030" />

        <EditText
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:id="@+id/editText4"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/textView3"
            android:textColor="#FF8756F9"
            android:textColorHint="#FF8756F9"
            android:hint="Enter key here"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Encrypt"
            android:id="@+id/button7"
            android:layout_marginTop="57dp"
            android:onClick="onButtonClick6"
            android:layout_below="@+id/editText4"
            android:layout_centerHorizontal="true"
            android:textColor="#FF8756F9"
            android:background="#303030" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:id="@+id/textView5"
            android:layout_below="@+id/button7"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="61dp"
            android:textColorHint="#FF8756F9"
            android:textColor="#FF8756F9"
            android:hint="Encrypted Text"/>

        <Button
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:text="Share"
            android:id="@+id/button13"
            android:layout_alignBottom="@+id/editText4"
            android:layout_alignEnd="@+id/checkBox2"
            android:textColor="#FF8756F9"
            android:background="#303030" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Share"
            android:id="@+id/button14"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/button7"
            android:textColor="#FF8756F9"
            android:background="#303030" />
    </RelativeLayout>
</LinearLayout>
