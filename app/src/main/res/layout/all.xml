<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="10dp"
        android:background="#303030">

        <TextView
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:text="Caesar Cipher"
            android:id="@+id/textView11"
            android:textSize="25dp"
            android:layout_above="@+id/textView12"
            android:layout_alignParentStart="true"
            android:textColor="#FF8756F9" />

        <TextView
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:text="Vigenere Cipher"
            android:id="@+id/textView12"
            android:textSize="25dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:textColor="#FF8756F9" />

        <TextView
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:text="DES Encryption"
            android:id="@+id/textView13"
            android:textSize="25dp"
            android:layout_above="@+id/textView14"
            android:layout_alignParentStart="true"
            android:textColor="#FF8756F9" />

        <TextView
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:text="AES Encryption"
            android:id="@+id/textView14"
            android:textSize="25dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="133dp"
            android:textColor="#FF8756F9" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Key"
            android:id="@+id/textView7"
            android:layout_above="@+id/textView11"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="59dp"
            android:textSize="35dp"
            android:textColor="#FF8756F9" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:text="Plain Text"
            android:id="@+id/textView15"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textSize="30dp"
            android:textColor="#FF8756F9" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText8"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView11"
            android:textColor="#FF8756F9"
            android:textColorHint="#FF8756F9"
            android:hint="Enter message here"/>

        <EditText
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText9"
            android:layout_alignBottom="@+id/textView7"
            android:layout_alignEnd="@+id/editText8"
            android:textColorHint="#FF8756F9"
            android:textColor="#FF8756F9"
            android:hint="Enter key here"/>

        <TextView
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:id="@+id/textView16"
            android:layout_alignBottom="@+id/textView11"
            android:layout_alignStart="@+id/editText9"
            android:textColor="#FF8756F9" />

        <TextView
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:id="@+id/textView17"
            android:layout_alignTop="@+id/textView12"
            android:layout_alignStart="@+id/textView16"
            android:textColor="#FF8756F9" />

        <TextView
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:id="@+id/textView18"
            android:layout_alignTop="@+id/textView13"
            android:layout_alignStart="@+id/textView17"
            android:textColor="#FF8756F9" />

        <TextView
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:id="@+id/textView19"
            android:layout_below="@+id/textView18"
            android:layout_alignStart="@+id/textView18"
            android:textColor="#FF8756F9" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ANALYZE"
            android:id="@+id/button18"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textColor="#FF8756F9"
            android:background="#303030" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Numeric Key Only"
            android:id="@+id/textView21"
            android:layout_below="@+id/editText9"
            android:layout_alignParentStart="true"
            android:textSize="15dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Encrypt"
            android:id="@+id/button17"
            android:layout_below="@+id/textView19"
            android:layout_centerHorizontal="true"
            android:onClick="onButtonClick10"
            android:textColor="#FF8756F9"
            android:background="#303030" />

    </RelativeLayout>

</LinearLayout>
