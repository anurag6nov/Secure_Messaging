<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#303030">
        tools:context=".ShareActivityMainActivity"


        <EditText
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:id="@+id/editText"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="113dp"
            android:animateLayoutChanges="true"
            android:textColor="#FF8756F9"
            android:hint="Enter message here"
            android:textColorHint="#FF8756F9"/>

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText2"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:animateLayoutChanges="true"
            android:textColor="#FF8756F9"
            android:hint="Enter Key here"
            android:textColorHint="#FF8756F9"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Encrypt"
            android:id="@+id/button6"
            android:layout_marginTop="72dp"
            android:layout_below="@+id/editText2"
            android:layout_centerHorizontal="true"
            android:onClick="onButtonClick5"
            android:animateLayoutChanges="true"
            android:textColor="#FF8756F9"
            android:background="#303030" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:id="@+id/textView4"
            android:layout_below="@+id/button6"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="57dp"
            android:animateLayoutChanges="true"
            android:textColor="#FF8756F9" />

        <CheckBox
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:text="Auto"
            android:id="@+id/checkBox"
            android:layout_marginBottom="31dp"
            android:layout_above="@+id/editText2"
            android:layout_toEndOf="@+id/editText2"
            android:checked="false"
            android:animateLayoutChanges="true"
            android:textColor="#FF8756F9"
            android:background="#303030" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:text="Auto Key"
            android:id="@+id/textView2"
            android:layout_alignBottom="@+id/checkBox"
            android:layout_alignParentStart="true"
            android:textSize="30dp"
            android:layout_alignEnd="@+id/button6"
            android:textAlignment="center"
            android:animateLayoutChanges="true"
            android:textColor="#FF8756F9" />

        <Button
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:text="Share"
            android:textSize="20sp"
            android:id="@+id/shareit"
            android:textColor="#FF8756F9"
            android:background="#303030"
            android:typeface="serif"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:animateLayoutChanges="true"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:text="Share"
            android:id="@+id/button10"
            android:layout_alignTop="@+id/editText2"
            android:layout_toEndOf="@+id/checkBox"
            android:animateLayoutChanges="true"
            android:textColor="#FF8756F9"
            android:background="#303030"
            android:layout_alignStart="@+id/checkBox" />

        <TextView
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:text="Note : Key should be numeric only"
            android:id="@+id/textView20"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:textSize="18dp"
            android:textAlignment="center"
            android:animateLayoutChanges="true"
            android:textColor="#FF8756F9" />

    </RelativeLayout>
</LinearLayout>
